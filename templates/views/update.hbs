<html lang="en">

  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>MyPage</title>
    <style>
      body 
      {
         background-color: black; 
         color: gold; 
         text-align: center;
      } 
      a{
        text-decoration:none;
        color:gold;
      }
      button,#save{
        padding:5px;
        background-color:black;
        color:gold;
        margin:auto;
        cursor:pointer;
        border-radius:10px;
      }
      #save,#logout{
        padding:5px;
        border-radius:10px;
      }
      button:hover,#save:hover{
        background-color:white;
        border:none;
        box-shadow:2px 2px 10px gold;
      }
      u{
        color:cyan;
      }
      #heading{
        display:flex;
        justify-content:space-between;
        margin:auto;
        width:80%;
        height:fit-content;
      }
      #logout{
        margin-right:0px;
      }
      #container{
        width:80%;
        height:fit-content;
        margin:10px auto;
      }
      #form{
        width:100%;
        height:fit-content;
        border:none;
        box-shadow:2px 2px 10px white;
        background-color:transparent;
        padding:10px;
      }
      #title,#note{
        width:80%;
        height:50px;
        margin:10px auto;
      }
      #note{
        height:200px;
      }
      
    </style>

  </head>

  <body>
    <div id="heading">
      <h1>WELCOME <u>{{userid}}</u></h1>
      <button id="logout"><a href="/logout/{{id}}">LOGOUT</a></button>
    </div>
    <div id="container">
      <form action="/content/edit/{{note_id}}/{{email}}" method="post" id="form">
        <input type="text" id="title" name="title" value={{title}}>
        <textarea name="note" id="note">{{fullnote}}</textarea><br>
        <input type="submit" id="save" value="UPDATE">
      </form>
      
  </body>

</html>